<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bhavy.lifesaver.MainActivity"
    android:background="@color/colorPrimaryLight">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/water"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/basicStyle"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintVertical_bias="0.039"
        android:id="@+id/water"
        android:textSize="32sp"/>

    <ImageButton
        android:id="@+id/half_glass"
        android:layout_width="120dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/half_glass"
        tools:ignore="MissingConstraints"
        android:scaleType="fitCenter"
        android:background="@drawable/border_style"
        android:layout_marginTop="75dp"
        app:layout_constraintTop_toBottomOf="@+id/water"
        android:layout_marginLeft="41dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:padding="4dp"


        />
    <ImageButton
        android:id="@+id/full_glass"
        android:layout_width="120dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/full_glass"
        tools:ignore="MissingConstraints"
        android:scaleType="fitCenter"
        android:background="@drawable/border_style"
        android:layout_marginTop="75dp"
        app:layout_constraintTop_toBottomOf="@+id/water"
        android:layout_marginLeft="193dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.41"
        android:padding="4dp"

       />

    <TextView
        android:id="@+id/count"
        style="@style/basicStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/count"
        android:layout_marginTop="56dp"
        app:layout_constraintTop_toBottomOf="@+id/half_glass"
        android:layout_marginLeft="-7dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.26" />

    <TextView
        android:id="@+id/value"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="0"
        android:layout_marginTop="376dp"
        android:background="@drawable/circle"
        android:textSize="30sp"
        android:textColor="@color/colorAccent"
        android:gravity="center"
        android:layout_marginRight="30dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/water"
        app:layout_constraintBottom_toBottomOf="@id/count"
        app:layout_constraintBottom_toTopOf="@id/count"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0" />


</android.support.constraint.ConstraintLayout>
